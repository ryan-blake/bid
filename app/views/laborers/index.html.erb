<p id="notice"><%= notice %></p>

<h1>Listing Laborers</h1>

<div class="row">
  <div class="col-md-8">
    <% @laborers.each do |laborer| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to laborer.name, laborer  %>
        </h4>
        <small>
          <%= laborer.email %>
        </small>
        <small>
          <td><%= link_to 'Show', laborer %></td>
          <% if laborer == pundit_user %>
          <td><%= link_to 'Edit', edit_laborer_registration_path %></td>
          <td><%= link_to 'Destroy', laborer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </small>
      </div>
    </div>
    <% end %>
  </div>
  <body>

    <div class="col-md-8">

      <%= link_to 'jobs', root_path %>
    </div>
