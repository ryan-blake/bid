<div class="row">
  <div class="col-md-8">
  <h1><%= @laborer.name %></h1>
    <div class="media">
      <div class="media-body">
      <h4 class="media-heading">
          About: <%= @laborer.about %>
      </h4>
        <small>
          contact: <%= @laborer.email %>
        </small>
      <br>
          Average Rating:
        <% @laborer.reviews.average(:rating).to_i.times do %>
          <%= image_tag "Star.png", :size => "25x25" %>
        <% end %>
        <br>

        <% unless pundit_user == @laborer %>
             <%= link_to 'Send message', new_message_path(to: @laborer), class: 'btn btn-default btn-sm' %>
        <% end %>      </br>
    </div>
  </div>
 </div>
</div>


<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body-1">
        <h3>Reviews </h3>
        <% @laborer.reviews.each do |review| %>
          <Li><b> <%= review.title %> </b></li>
