<h1> Adv. search </h1>

<%= form_for @search, html: {class: "pure-form"} do |s|%>
<div class="field">
    <%=s.label :keywords  %>
    <%= s.text_field :keywords%>
</div>

<div class="field">
    <%=s.label :category %> <br />
    <%= collection_select( nil, :category_id, Category.all, :id, :name, { :include_blank => 'All Categories'} , { :class => 'form-control' })  %>
</div>

<div class="field">
<p>  <%= s.label :min_price, "Min Price" %> - <%= s.text_field :min_price, size: 10 %> </p>
<p>  <%= s.label :max_price, "Max Price" %> - <%= s.text_field :max_price, size: 10 %> </p>
</div>

<!-- time -->

<div class="actions"><%= s.submit "search", class: "pure-button pure-button-prime" %> </div>

<% end %>
<p> <%= link_to 'back', jobs_path %> </p>
