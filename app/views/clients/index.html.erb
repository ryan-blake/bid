<h1>Listing Clients</h1>



-------------
<div class="row">
  <div class="col-md-8">
    <% @clients.each do |client| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to client.name, client  %>
        </h4>
        <small>
          <%= client.email %>
        </small>
        <small>
          <td><%= link_to 'Show', client %></td>
          <% if client == pundit_user %>
            <td><%= link_to 'Edit', edit_client_registration_path %></td>
            <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </small>
      </div>
    </div>
    <% end %>
  </div>
